%nav.top-bar{"data-topbar" => "", :role => "navigation"}
  %section.top-bar-section
    %ul.left
      %li=link_to(t('home'), root_path)
    %ul.right
      - if current_user
        %li= link_to "#{current_user.name.capitalize}", user_path(current_user)
      - else
        = form_tag sessions_path do
          %li= email_field_tag :email, nil, placeholder: t('.mail')
          %li= password_field_tag :password, nil, placeholder: t('.password')
          %li= submit_tag t('.login'), class: "button"
          %li= link_to t('.reset_password'), new_reset_password_path

- if current_user
  %ul.breadcrumbs
    %li=link_to(t('chap1'), chapitre_path(id: 1))
    %li.unavailable=link_to(t('chap2'), chapitre_path(id: 2))
    %li.unavailable=link_to(t('chap3'), chapitre_path(id: 3))
    %li.unavailable=link_to(t('chap4'), chapitre_path(id: 4))
    %li.unavailable=link_to(t('chap5'), chapitre_path(id: 5))
